<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_nobg" />

        <Button
            android:id="@+id/btn_ingresar"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="55dp"
            android:backgroundTint="@color/md_theme_onPrimaryFixedVariant"
            android:padding="0dp"
            android:text="Ingresar"
            android:textColor="@color/md_theme_background"
            android:textSize="16sp"
            app:icon="@drawable/login_24dp"
            app:iconGravity="textStart"
            app:iconTint="@color/md_theme_background"
            app:rippleColor="@color/md_theme_background_mediumContrast" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:paddingHorizontal="55dp">

            <TextView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Elaborado por:"
                android:textColor="@color/md_theme_onPrimaryFixedVariant"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/one2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gabriel Talledo Meneses"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/one3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20211755"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>